<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/dialog_list_item_background"
  android:gravity="start|center_vertical"
  android:minHeight="@dimen/dialog_list_item_min_height"
  android:orientation="horizontal"
  android:paddingLeft="@dimen/dialog_frame_padding"
  android:paddingRight="12dp">

  <TextView
    android:id="@+id/item"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:lineSpacingMultiplier="@dimen/dialog_list_item_line_spacing_multiplier"
    android:paddingRight="@dimen/dialog_frame_padding"
    android:textColor="@color/dialog_text_normal_color"
    android:textSize="@dimen/dialog_item_text_size"
    tools:text="Item" />

  <View
    android:id="@+id/index"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:background="@drawable/dialog_single_button_icon_background"
    android:gravity="center" />
</LinearLayout>